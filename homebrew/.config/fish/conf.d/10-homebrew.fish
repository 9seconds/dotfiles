set -gx HOMEBREW_NO_AUTO_UPDATE 1
set -gx HOMEBREW_NO_EMOJI 1
set -gx HOMEBREW_NO_INSECURE_REDIRECT 1
set -gx HOMEBREW_NO_INSTALL_CLEANUP 1
