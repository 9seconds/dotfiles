set -gx HOMEBREW_FORCE_BREWED_CA_CERTIFICATES 1
set -gx HOMEBREW_FORCE_BREWED_CURL 1
set -gx HOMEBREW_FORCE_BREWED_GIT 1
set -gx HOMEBREW_FORCE_VENDOR_RUBY 1
