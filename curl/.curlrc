# always ask for compression
--compressed

# spend no more than 5s to connect
--connect-timeout 5

# exit on a first detected error
--fail-early

# return body on http bad code
#--fail-with-body

# respect self-signed
--insecure

# follow redirects
--location

# read netrc sensibly
--netrc-optional

# use concise progress bar
--progress-bar

# try to understand remote time
--remote-time
