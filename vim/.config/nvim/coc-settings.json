{
	"diagnostic.displayByAle": true,
	"coc.preferences.rootPatterns": [
		".vim",
		".git",
		".hg",
		".svn",
		"go.mod"
	],
	"languageserver": {
		"python": {
			"command": "python",
			"args": [
				"-mpyls",
				"-vv",
				"--log-file",
				"/tmp/lsp_python.log"
			],
			"filetypes": [
				"python"
			],
			"settings": {
				"pyls": {
					"enable": true,
					"commandPath": "",
					"plugins": {
						"jedi_completion": {
							"enabled": true
						},
						"jedi_hover": {
							"enabled": true
						},
						"jedi_references": {
							"enabled": true
						},
						"jedi_signature_help": {
							"enabled": true
						},
						"jedi_symbols": {
							"enabled": true,
							"all_scopes": true
						},
						"mccabe": {
							"enabled": false,
							"threshold": 15
						},
						"preload": {
							"enabled": true
						},
						"pycodestyle": {
							"enabled": false
						},
						"pydocstyle": {
							"enabled": false,
							"match": "(?!test_).*\\.py",
							"matchDir": "[^\\.].*"
						},
						"pyflakes": {
							"enabled": false
						},
						"rope_completion": {
							"enabled": true
						},
						"yapf": {
							"enabled": false
						}
					}
				}
			}
		}
	}
}
