{
  "For loop": {
    "prefix": "for",
    "description": "A generic for loop",
    "body": [
      "for ${2:item} in ${1:items}:",
      "    $0"
    ]
  },

  "try/except": {
    "prefix": "tryex",
    "description": "A base try/except clause",
    "body": [
      "try:",
      "    ${1:$TM_SELECTED_TEXT}",
      "except ${2:${3:Exception}${4: as ${5:exc}}}:",
      "    ${6:pass}",
      "$0"
    ]
  },

  "try/finally": {
    "prefix": "tryfi",
    "description": "A base try/finally clause",
    "body": [
      "try:",
      "    ${1:$TM_SELECTED_TEXT}",
      "finally:",
      "    $2",
      "$0"
    ]
  },

  "Conditional": {
    "prefix": "if",
    "description": "A base if clause",
    "body": [
      "if ${1:clause}:",
      "    $0"
    ]
  },

  "Comprehension": {
    "prefix": "comp",
    "description": "Base for a list comprehension",
    "body": [
      "${3:expression} for ${1:item} in ${2:items}"
    ]
  },

  "return": {
    "prefix": "re",
    "description": "Just a shortcut for a return",
    "body": [
      "return $0"
    ]
  },

  "self": {
    "prefix": "se",
    "description": "Just a shortcut for self.",
    "body": [
      "self.$0"
    ]
  },

  "Function": {
    "prefix": "def",
    "description": "Function declaraction",
    "body": [
      "def ${1:func}(${2:*args, **kwargs}):",
      "    ${0:raise NotImplementedError()}"
    ]
  },

  "Function method": {
    "prefix": "defm",
    "description": "Method declaraction",
    "body": [
      "def ${1:func}(self${2:, *args, **kwargs}):",
      "    ${0:raise NotImplementedError()}"
    ]
  },

  "Function method with super() call": {
    "prefix": "defms",
    "description": "Function methid with super",
    "body": [
      "def ${1:func}(self, ${2:*args, **kwargs}):",
      "    ${5:result} = super(${3:Class}, self).$1(${4:$2})"
    ]
  },

  "Readable property": {
    "prefix": "propr",
    "description": "Property only for reading",
    "body": [
      "@property",
      "def ${1:name}(self):",
      "    ${0:return self._$1}"
    ]
  },

  "Writable property": {
    "prefix": "propw",
    "description": "Property for reading/writing",
    "body": [
      "@property",
      "def ${1:name}(self):",
      "    ${2:return self._$1}",
      "",
      "@${1}.setter",
      "def ${1}(self, value):",
      "    ${0:self._$1 = value}"
    ]
  },

  "set pdb": {
    "prefix": "pdb",
    "description": "pdb.set_trace()",
    "body": [
      "import pdb; pdb.set_trace()"
    ]
  },

  "Python 2 class definition": {
    "prefix": "class",
    "description": "A base class definition for Python2",
    "body": [
      "class ${1:Class}(${2:object}):",
      "",
      "    def __init__(self, ${3:*args, **kwargs}):",
      "        ${5:super($1, self).__init__(${4:$3})}"
    ]
  },

  "from . import something": {
    "prefix": "fri",
    "description": "Add from . import . clause",
    "body": [
      "from ${1:foo} import ${2:bar}${3: as ${4:_$2}}"
    ]
  },

  "lambda definition": {
    "prefix": "ld",
    "description": "Lambda function definition",
    "body": [
      "lambda ${1:element}: ${0:$1}"
    ]
  }
}
