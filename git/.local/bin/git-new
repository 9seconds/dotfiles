#!/usr/bin/env fish

set this_script_path $(path resolve $(status --current-filename))
set this_script_name $(path basename $this_script_path)

function show_help
  echo "Usage: $this_script_name [-h/--help] [-d/--debug]"
  echo
  echo 'Show what you are going to push to upstream'
end

argparse --max-args=0 'h/help&' 'd/debug&' 'a/all&' -- $argv
or begin
  show_help
  return 1
end

if set -q _flag_debug
  set fish_trace 1
end
if set -q _flag_help
  show_help
  return 0
end

set -x DFT_DISPLAY side-by-side
set -x DFT_COLOR always

exec git difftool -t difftastic @{upstream}
