[user]
    email = nineseconds@yandex.ru
    name  = 9seconds
[alias]
    a           = add
    aap         = add --all --patch
    ap          = add --patch
    assumeall   = "!git st -s | awk {'print $2'} | xargs git assume"
    assumed     = "!git ls-files -v | grep ^h | cut -c 3-"
    assume      = update-index --assume-unchanged
    bl          = blame --minimal
    br          = branch
    cl          = clean -xfd
    cma         = commit -a -m
    cm          = commit -m
    cob         = checkout -b
    co          = checkout
    cp          = cherry-pick
    dfc         = diff --cached --minimal
    df          = diff --minimal
    fb          = "!f() { git branch -a --contains $1; }; f"
    fixa        = commit -a --amend --reuse-message=HEAD
    fix         = commit -a --amend
    ftch        = fetch --prune --all --recurse-submodules=yes
    ft          = "!f() { git describe --always --contains $1; }; f"
    gcc         = !git reflog expire --expire=all --stale-fix --all && git gc --prune=all && git gc --aggressive --prune=all && git repack -AFdfb --depth 250 --window 250
    le          = log --decorate --oneline --graph
    ll          = log --pretty=format:"%C(yellow)%h%Cred%d\\ ->\\ %Creset%s%Cblue\\ (%cn)" --decorate --numstat
    pshf        = !git push --atomic --all --prune --force && git push --tags --force
    psh         = !git push --atomic --all --prune && git push --tags --prune
    pulla       = pull --rebase --all --recurse-submodules=yes --prune
    pullr       = pull --rebase --recurse-submodules=yes --prune
    retag       = "!r() { git tag -d $1 && git push origin :refs/tags/$1 && git tag $1; }; r"
    rh          = reset --hard
    s           = status -s
    su          = submodule update --init
    unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
    unassume    = update-index --no-assume-unchanged
[push]
    default = simple
[rerere]
    enabled = 1
[color]
    ui = true
[merge]
    tool = p4merge
[diff]
    tool = diffmerge
[core]
    pager        = less -XSFR
    preloadindex = true
[mergetool "p4merge"]
    cmd             = "/opt/p4merge/bin/p4merge $BASE $LOCAL $REMOTE $MERGED"
    keepTemporaries = false
    trustExitCode   = false
    keepBackup      = false
[pack]
    compression = 9
    threads     = 8
[gitreview]
    username = sarkhipov
[grep]
    patternType = perl
    fullName    = true
